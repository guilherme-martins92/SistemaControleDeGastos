@model ControleDeGastos.Models.TipoConta

@{
    if (Model.Id == 0)
    {
        ViewData["Title"] = "Cadastrar Novo Tipo de Conta";
    }
    else
    {
        ViewData["Title"] = "Editar Tipo de Conta";
    }
}

<br />
<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" id="Nome" name="Nome" value="@Model.Nome" class="form-control" placeholder="Digite o tipo de conta" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (Model.Id == 0)
                {
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                }
                else
                {
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                }
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
