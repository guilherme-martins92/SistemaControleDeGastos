@model ControleDeGastos.Models.ViewModels.ContaFormViewModel

@{
    ViewData["Title"] = "Editar";
}


<br />
<h4>Editar Conta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div class="form-group col-md-8">
                <label asp-for="Conta.Data" class="control-label"></label>
                <input asp-for="Conta.Data" class="form-control" />
                <span asp-validation-for="Conta.Data" class="text-danger"></span>
            </div>
            <div class="form-group col-md-8">
                <label for="tipoConta">Tipo de Conta</label>
                <select asp-for="Conta.TipoContaId" class="form-control" asp-items="@(new SelectList((Model.TipoContas),"Id","Nome"))"></select>
            </div>
            <div class="form-group col-md-8">
                <label for="categoria">Categoria</label>
                <select asp-for="Conta.CategoriaId" class="form-control" asp-items="@(new SelectList((Model.Categorias),"Id","Nome"))"></select>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Conta.Descricao" class="control-label"></label>
                <input asp-for="Conta.Descricao" class="form-control" placeholder="Insira uma descrição" />
                <span asp-validation-for="Conta.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Conta.Valor" class="control-label"></label>
                <div class="input-group mb-12">
                    <span class="input-group-text">R$</span>
                    <input asp-for="Conta.Valor" type="text" class="form-control" />
                </div>
                <span asp-validation-for="Conta.Valor" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <input type="hidden" asp-for="Conta.Id" />
                <input type="hidden" asp-for="Conta.UsuarioId" />
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>



