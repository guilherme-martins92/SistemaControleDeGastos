@model ControleDeGastos.Models.Categoria

@{
    if (Model.Id == 0)
    {
        ViewData["Title"] = "Cadastrar Nova Categoria";
    }
    else
    {
        ViewData["Title"] = "Editar Categoria";
    }
}

<br />
<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-3">
        <form method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="form-group">
                <label for="Nome">Nome da Categoria</label>
                <input type="text" class="form-control" id="Nome" name="Nome" value="@Model.Nome" placeholder="Digite o nome da categoria">
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (Model.Id == 0)
                {
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary">Salvar</button>
                }
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}